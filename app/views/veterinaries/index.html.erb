<% content_for :breadcrumbs do %>
  <h3 class="breadcrumbs__item breadcrumbs__item--active"><%= Veterinary.model_name.human(count: 2) %></h3>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= Veterinary.human_attribute_name(:name) %></th>
      <th><%= Veterinary.human_attribute_name(:phone) %></th>
      <th><%= Veterinary.human_attribute_name(:email) %></th>
    </tr>
  </thead>

  <tbody>
    <% @veterinaries.each do |veterinary| %>
      <tr>
        <td><%= link_to veterinary.name, veterinary %></td>
        <td><%= veterinary.phone %></td>
        <td><%= veterinary.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to image_tag('icons/ic_group_add_white_24px.svg', alt: t(:new_resource, scope: [:common], resource: Veterinary.model_name.human)), new_veterinary_path, { class: 'btn btn__floating' } %>

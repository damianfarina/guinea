<% content_for :breadcrumbs do %>
  <h3>Veterinary <%= @veterinary.name %></h3>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @veterinary.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @veterinary.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @veterinary.email %>
</p>

<p>
  <strong>Employees:</strong>
  <%= @veterinary.veterinarians.map{|v| link_to v.full_name, v}.join(', ').html_safe %>
</p>

<%= link_to 'Edit', edit_veterinary_path(@veterinary) %> |
<%= link_to 'Back', veterinaries_path %>

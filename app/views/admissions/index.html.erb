<% content_for :breadcrumbs do %>
  <h3 class="breadcrumbs__item breadcrumbs__item--active"><%= Admission.model_name.human(count: 2) %></h3>
<% end %>


<div class="admissions collection">
  <% @admissions.each do |admission| %>
    <div class="admission collection__item">

      <div class="collection__item-area1">
        <div class="petitioner"><%= admission.petitioner_name %></div>
        <div class="owner"><%= admission.owner_name %></div>
        <div class="exams-count"><%= admission.exams.count %> <%= Admission.human_attribute_name(:exams, count: admission.exams.count) %></div>
      </div>

      <div class="collection__item-area2">
        <div class="patient"><%= admission.patient_name %></div>
        <div class="species titleize"><%= t(admission.species, scope: [:activerecord, :attributes, :admission, :species]) %></div>
        <div class="breed"><%= admission.breed %></div>
      </div>

      <div class="collection__item-area3">
        <div class="comments collection__item-description"><p><%= admission.comments %></p></div>
      </div>

      <div class="collection__item-area4">
        <%= link_to :arrow_forward, admission_path(admission), class: 'icon show collection__item-link' %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to tag.i(:add, class: :icon), new_admission_path, { class: 'btn btn__floating', title: t(:new_resource, scope: [:common], resource: Admission.model_name.human) } %>

<% content_for :breadcrumbs do %>
  <h3 class="breadcrumbs__item breadcrumbs__item--active"><%= Veterinarian.model_name.human(count: 2) %></h3>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= Veterinarian.human_attribute_name(:full_name) %></th>
      <th><%= Veterinarian.human_attribute_name(:phone) %></th>
      <th><%= Veterinarian.human_attribute_name(:email) %></th>
    </tr>
  </thead>

  <tbody>
    <% @veterinarians.each do |veterinarian| %>
      <tr>
        <td><%= link_to veterinarian.full_name, veterinarian %></td>
        <td><%= veterinarian.phone %></td>
        <td><%= veterinarian.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to image_tag('icons/ic_person_add_white_24px.svg', alt: t(:new_resource, scope: [:common], resource: Veterinarian.model_name.human)), new_veterinarian_path, { class: 'btn btn__floating' } %>

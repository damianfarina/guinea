<% content_for :breadcrumbs do %>
  <h3>Veterinarian <%= @veterinarian.full_name %></h3>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Full name:</strong>
  <%= @veterinarian.full_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @veterinarian.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @veterinarian.email %>
</p>

<p>
  <strong>Works at:</strong>
  <%= @veterinarian.veterinaries.map{|v| link_to v.name, v}.join(', ').html_safe %>
</p>

<%= link_to 'Edit', edit_veterinarian_path(@veterinarian) %> |
<%= link_to 'Back', veterinarians_path %>
